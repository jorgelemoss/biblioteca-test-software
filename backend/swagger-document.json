{
    "openapi": "3.0.0",
    "info": {
        "title": "Biblioteca API",
        "description": "Fornece uma API de gestão e controle de usuários e livros.",
        "version": "0.0.1"
    },
    "paths": {
        "/user": {
            "post": {
                "summary": "Criar um usuário",
                "description": "Registra um novo usuário",
                "requestBody": {
                    "description": "Criar usuário",
                    "required": true,
                    "content": {
                        "json/application": {
                            "schema": {
                                "$ref": "#/components/schemas/create-user"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário criado com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/create-user"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Houve um erro na requisição.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Token de autenticação inválida."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Não tem possui permissão para esta ação.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Impossível executar esta ação."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Não foi possível realizar esta solicitação.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Impossível de executar."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth": {
            "post": {
                "summary": "Autenticar o usuario",
                "description": "Autentica um usuário anteriormente criado.",
                "requestBody": {
                    "description": "Credenciais do usuário para autenticação",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/auth-user"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário autenticado com sucesso.",
                        "headers": {
                            "Set-Cookie": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/auth-user"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Houve um erro na requisição.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Erro durante a requisição."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não encontrado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Usuário inválido ou não encontrado."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/me": {
            "get": {
                "summary": "Obtém os dados do usuário",
                "description": "Informações gerais do usuário autenticado.",
                "responses": {
                    "200": {
                        "description": "Dados retornados com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/user-profile"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token inválido ou ausente.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Token inválido ou nulo."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "user-profile": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "ID do usuário"
                    },
                    "name": {
                        "type": "string",
                        "description": "Nome do usuário"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "description": "Email do usuário"
                    },
                    "registration": {
                        "type": "string",
                        "description": "Matrícula do usuário"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "description": "Senha do usuário"
                    },
                    "image": {
                        "type": "string",
                        "description": "Link para a foto"
                    },
                    "role": {
                        "type": "string",
                        "description": "Cargo do usuário"
                    }
                }
            },
            "create-user": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "format": "text",
                        "description": "Nome do usuário"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "description": "Endereço de email do usuário"
                    },
                    "registration": {
                        "type": "string",
                        "format": "text",
                        "description": "Matrícula do usuário"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "description": "Senha do usuário"
                    }
                },
                "example": {
                    "name": "John Doe",
                    "email": "johndoe@doscente.ifpe.edu.br",
                    "registration": "20241ADSPL0000",
                    "password": "12345678"
                },
                "required": [
                    "name",
                    "email",
                    "registration",
                    "password"
                ]
            },
            "auth-user": {
                "type": "object",
                "properties": {
                    "registration": {
                        "type": "string",
                        "format": "text",
                        "description": "20241ADSPL0000"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "description": "12345678"
                    }
                },
                "example": {
                    "registration": "20241ADSPL0000",
                    "password": "12345678"
                },
                "required": [
                    "registration",
                    "password"
                ]
            }
        }
    }
}